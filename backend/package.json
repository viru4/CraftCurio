{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend for craftcurio",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "nodemon server.js",
    "seed": "node scripts/seed.js",
    "seed:quiet": "node scripts/seed.js --quiet",
    "seed:no-clear": "node scripts/seed.js --no-clear",
    "clear": "node -e \"import('./scripts/seeders/utils.js').then(m => m.clearDatabase().then(() => process.exit(0)))\"",
    "stats": "node -e \"import('./scripts/seeders/utils.js').then(m => m.getDatabaseStats().then(s => console.log(JSON.stringify(s, null, 2)) || process.exit(0)))\"",
    "seed:legacy": "node scripts/seedData.js seed",
    "clear:legacy": "node scripts/seedData.js clear",
    "stats:legacy": "node scripts/seedData.js stats",
    "reseed:legacy": "node scripts/seedData.js reseed"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mongoose": "^8.18.2",
    "nodemon": "^3.1.10"
  }
}
