{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend for craftcurio",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seed.js",
    "seed:quiet": "node scripts/seed.js --quiet",
    "seed:no-clear": "node scripts/seed.js --no-clear",
    "reseed": "node scripts/seed.js",
    "reseed:collectibles": "node scripts/reseed-collectibles.js",
    "clear": "node -e \"import('./scripts/seeders/utils.js').then(m => m.clearDatabase().then(() => process.exit(0)))\"",
    "stats": "node -e \"import('./scripts/seeders/utils.js').then(m => m.getDatabaseStats().then(s => console.log(JSON.stringify(s, null, 2)) || process.exit(0)))\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "check-email": "node scripts/checkEmailConfig.js",
    "create-admin": "node scripts/createAdminUser.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@huggingface/inference": "^4.13.9",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.10.1",
    "nodemon": "^3.1.10",
    "razorpay": "^2.9.6",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0"
  }
}
