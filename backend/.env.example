# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000

# MongoDB Connection String
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database

# Alternative MongoDB connections for team members
# MONGODB_VIRENDRA=mongodb+srv://your_username:your_password@cluster.mongodb.net/database
# MONGODB_LAVISH=mongodb+srv://your_username:your_password@cluster.mongodb.net/database
# MONGODB_PRINCE=mongodb+srv://your_username:your_password@cluster.mongodb.net/database

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_key_here

# Cloud inary Configuration (Image Upload Service)
# Sign up at https://cloudinary.com to get your credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Email Configuration (Optional - for email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@craftcurio.com

# Other Environment Variables
NODE_ENV=development
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

